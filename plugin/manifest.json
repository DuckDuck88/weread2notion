{
  "manifest_version": 2,
  "name": "Cookie Getter",
  "version": "1.0",
  "permissions": [
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "cookies.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
